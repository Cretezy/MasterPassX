{
  "name": "@masterpassx/core",
  "version": "2.0.0",
  "license": "MIT",
  "repository": "https://github.com/Cretezy/MasterPassX",
  "author": "Charles Crete <charles@cretezy.com>",
  "scripts": {
    "watch": "tsc -w",
    "build": "tsc",
    "format": "prettier --write src/**/*.ts jest.config.js tsconfig.json package.json README.md",
    "test": "jest",
    "prepack": "npm run build"
  },
  "main": "dist/index.js",
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "buffer": "^5.4.3",
    "crypto-js": "^3.1.9-1",
    "scrypt-async-modern": "^3.0.12"
  },
  "devDependencies": {
    "@types/crypto-js": "^3.1.43",
    "@types/jest": "^24.0.25",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "roots": ["<rootDir>/src"],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": ["ts", "js", "json"]
  }
}
